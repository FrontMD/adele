-
    const defaultHomeInfoProps = {
        classes: '',
    }

mixin home-info(props = defaultHomeInfoProps)
    -
        const checkProps = {
            classes: props.classes ? props.classes : defaultHomeInfoProps.classes
        }

    section.home-info(class=checkProps.classes data-js="homeInfo")
        .m-container
            .home-info__container
                .home-info__bg 
                    img(src="img/home/home_info.webp" alt="")
                .home-info__title.title.title--h2.title--light Современное онлайн-обучение для вашего ребенка 
                .home-info__slider(data-js="homeInfoSlider")
                    .swiper-wrapper
                        .home-info__item.swiper-slide
                            .home-info__num.title.title--h5 01
                            .home-info__subtitle.title.title--h6 Группа разделена на&nbsp;подгруппы

                        .home-info__item.swiper-slide
                            .home-info__num.title.title--h5 02
                            .home-info__subtitle.title.title--h6 Регулярные срезы знаний

                        .home-info__item.swiper-slide
                            .home-info__num.title.title--h5 03
                            .home-info__subtitle.title.title--h6 Проверĸа домашнего задания<br>Мини тесты в&nbsp;начале уроĸа

                        .home-info__item.swiper-slide
                            .home-info__num.title.title--h5 04
                            .home-info__subtitle.title.title--h6 Арабский язык<br>Английский язык

                        .home-info__item.swiper-slide
                            .home-info__num.title.title--h5 05
                            .home-info__subtitle.title.title--h6 Персональные тьюторы<br>Классные руководители

                        .home-info__item.swiper-slide
                            .home-info__num.title.title--h5 06
                            .home-info__subtitle.title.title--h6 Проеĸтные работы для&nbsp;развития soft skills

                        .home-info__item.swiper-slide
                            .home-info__num.title.title--h5 07
                            .home-info__subtitle.title.title--h6 Система отчетностей

                        .home-info__item.swiper-slide
                            .home-info__num.title.title--h5 08
                            .home-info__subtitle.title.title--h6 Физĸультура в&nbsp;онлайн формате

            .home-info__pagination(data-js="homeInfoPagination")